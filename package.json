{
  "name": "code_crafted-geometry",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "install:ncu": "npm install -g npm-check-updates",
    "install:webpack": "npm install --save-dev webpack",
    "update:modules": "ncu -u && npm update && npm i",
    "copy:wasm": "copyfiles --flat ./.ci/*.d.ts ./buildWasm/cpp/ && copyfiles --flat ./buildWasm/cpp/*.wasm ./dist/client/",
    "build:.ci:ts": "tsc -p ./.ci/embind",
    "build:.ci:d.ts": "tsc -p ./.ci/wasm",
    "build:embind": "npm run build:.ci:ts && node dist/.ci/embind/generateWasmInterfaces.js",
    "build:wasm": "./.ci/wasm/buildWASM.sh && npm run copy:wasm",
    "build:client": "webpack --config ./ts/client/webpack.prod.js",
    "build:server": "tsc -p ./ts/server",
    "build": "npm run build:embind && npm run build:wasm && npm run build:client && npm run build:server",
    "dev": "webpack serve --config ./ts/client/webpack.dev.js",
    "start": "node ./dist/server/server.js",
    "test": "jest",
    "test:build": "npm run build && npm run test"
  },
  "author": "Rabbid76",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@types/dat.gui": "^0.7.10",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.1",
    "@types/three": "^0.153.0",
    "copyfiles": "^2.4.1",
    "dat.gui": "^0.7.9",
    "install-peers": "^1.0.4",
    "jest": "^29.6.1",
    "ts-loader": "^9.4.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "three": "^0.154.0"
  }
}
